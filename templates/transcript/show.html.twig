{% extends 'base.html.twig' %}

{% block title %}Transcript{% endblock %}

{% block body %}
    <h1>Transcript #{{ transcript.id }} {{ transcript.filename }}</h1>
    <a class="btn btn-success" href="{{ path('transcript_edit', {'id': transcript.id}) }}">edit</a>
    <a class="btn btn-primary" href="{{ path('transcript_correct', {'id': transcript.id}) }}">correct</a>

    {{ side|raw }}
    <pre>{{ context|raw }}</pre>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transcript.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ transcript.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ transcript.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ transcript.text }}</td>
                <td>{{ transcript.attempt }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ transcript.filename }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transcript_index') }}">back to list</a>

    <a class="btn btn-success" href="{{ path('transcript_edit', {'id': transcript.id}) }}">edit</a>

    {{ include('transcript/_delete_form.html.twig') }}
{% endblock %}
